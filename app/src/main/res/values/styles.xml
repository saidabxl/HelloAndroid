<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#1bbaea</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Textone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">29sp</item>
        <item name="android:background">@drawable/bg1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:contentDescription">@string/moto</item>


    </style>

    <style name="Texttwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg2</item>
        <item name="android:contentDescription">@string/school</item>


    </style>

    <style name="Textthree">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:contentDescription">@string/adress1</item>
        <item name="android:autoLink">map</item>
        <item name="android:drawableLeft">@drawable/ic_location_on</item>


    </style>

    <style name="Textfour">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">map</item>
        <item name="android:contentDescription">@string/adress2</item>
    </style>

    <style name="Textfive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">phone</item>
        <item name="android:drawableLeft">@drawable/ic_call</item>
        <item name="android:contentDescription">@string/phone</item>

    </style>

    <style name="Textsix">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">web</item>
        <item name="android:drawableLeft">@drawable/ic_action_globe</item>
        <item name="android:contentDescription">@string/url</item>

    </style>

    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">171dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:contentDescription">@string/image</item>
        <item name="android:scaleType">fitStart</item>


    </style>

</resources>
